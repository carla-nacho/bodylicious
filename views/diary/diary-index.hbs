<div class="container">
  <h1>Food Diary</h1>
  <form action="/diary" method="post">
    <h5>My Food Diary for:</h5>

    <div class="flex">
      <input type="date" name="date" id="date" class="form-control inputs">
      <button class="btn btn-dark margin-btn coolbutton updatebutton">Update</button>
    </div>


  </form>
  <br>
  <h5><strong>Breakfast</strong></h5>
  <a href='/diary/add'>Add food</a>
  <hr>
  <div class="row">
    {{#each meals.breakfast}}
    <div class="col-md-4">
      <p>{{foodName}}</p>
    </div>

    <div class="col-md-8">
      <p>Calories: {{foodNutrients.0.value}}kcal Proteins: {{foodNutrients.1.value}}g Fats: {{foodNutrients.2.value}}g
        Carbohydrates: {{foodNutrients.3.value}}g</p>
    </div>
    {{/each}}
  </div>

  <br><br>

  <h5><strong>Lunch</strong></h5>
  <a href='/diary/add'>Add food</a>
  <hr>
  <div class="row">
    {{#each meals.lunch}}
