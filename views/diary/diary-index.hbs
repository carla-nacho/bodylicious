<div class="container">
  <h2>Food Diary</h2>
  <div class='row'>
    <div clas='col-3'>
      <h4>Your Food Diary for:</h4>
    </div>
    <div clas='col-md- 9'>
      <form action="/diary" method="post">
        <input type="date" name="date" id="date" class="form-control">
        <button class="btn btn-dark">Update</button>
      </form>
    </div>
  </div>
  <hr>



  <h5>Breakfast</h5>
  {{#each meals.breakfast}}
  <p>{{foodName}}</p>
  <p>Calories: {{foodNutrients.0.value}} Proteins: {{foodNutrients.1.value}} Fats: {{foodNutrients.2.value}}
    Carbohydrates: {{foodNutrients.3.value}}</p>
  {{/each}}
  <a href='/diary/add'>Add food</a>


  <h5>Lunch</h5>
  {{#each meals.lunch}}
  <p>{{foodName}}</p>
  <p>Calories: {{foodNutrients.0.value}} Proteins: {{foodNutrients.1.value}} Fats: {{foodNutrients.2.value}}
    Carbohydrates: {{foodNutrients.3.value}}</p>


  {{/each}}
  <a href='/diary/add'>Add food</a>




  <h5>Dinner</h5>
  {{#each meals.dinner}}
  <p>{{foodName}}</p>
  <p>Calories: {{foodNutrients.0.value}} Proteins: {{foodNutrients.1.value}} Fats: {{foodNutrients.2.value}}
    Carbohydrates: {{foodNutrients.3.value}}</p>
  {{/each}}
  <a href='/diary/add'>Add food</a>






  <h5>Snacks</h5>
  {{#each meals.snacks}}
  <p>{{foodName}}</p>
  <p>Calories: {{foodNutrients.0.value}} Proteins: {{foodNutrients.1.value}} Fats: {{foodNutrients.2.value}}
    Carbohydrates: {{foodNutrients.3.value}}</p>
  {{/each}}
  <a href='/diary/add'>Add food</a>

</div>


</div>
</div>