      <p>Calories: {{foodNutrients.0.value}}kcal Proteins: {{foodNutrients.1.value}}g Fats: {{foodNutrients.2.value}}g
        Carbohydrates: {{foodNutrients.3.value}}g</p>
    </div>
    {{/each}}
  </div>

  <a href='/diary/add'>Add food</a>
  <br><br>

  <h5><strong>Dinner</strong></h5>
  <hr>
  <div class="row">
    {{#each meals.dinner}}
    <div class="col-6">
      <p>{{foodName}}</p>
    </div>

    <div class="col-6">
      <p>Calories: {{foodNutrients.0.value}}kcal Proteins: {{foodNutrients.1.value}}g Fats: {{foodNutrients.2.value}}g
        Carbohydrates: {{foodNutrients.3.value}}g</p>
    </div>
    {{/each}}
  </div>

  <a href='/diary/add'>Add food</a>
  <br><br>

  <h5><strong>Snacks</strong></h5>
  <hr>


  <div class="row">
    {{#each meals.snacks}}
    <div class="col-6">
      <p>{{foodName}}</p>
    </div>
